<div id="pointage_page_container">
    <div id="top_action_bar">
        <div class="top_bar_item">
            <h5>Choisir le Mois:</h5>
        </div>
        <div class="top_bar_item">
            <form id="pointageForm">
                <label for="pointageMonth">Choisissez un mois:</label>
                <input type="month" id="pointageMonth" name="pointageMonth" required>
                <button type="submit">Afficher le Pointage</button>
            </form>
        </div>
    </div>



    <div id="attendance_table_container">
        <table id="attendance_table">
            <thead>
                <tr id="days_row">
                    <!-- Days headers will be generated here -->
                </tr>
            </thead>
            <tbody id="employee_rows">
                <!-- Employee attendance rows will be generated here -->
            </tbody>
        </table>
    </div>
</div>

